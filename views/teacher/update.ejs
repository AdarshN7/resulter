<html lang="en">

<head>
  <title>Result Managenment Server</title>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"> <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/public/styles/style.css" type="text/css" />
  <link rel="stylesheet" href="/public/styles/stylesheet.css" type="text/css" />
</head>

<body>
  <header>
    <nav class="flex justify-between p-2 text-white bg-slate-700">
      <div>
        <a class="mx-4 hover:text-white" href="/">Home</a>
      </div>
      <div class="text-2xl">
        <span>Result Management System</span>
      </div>
      <div>
        <a class="mx-4 hover:text-white" style="cursor: pointer" href="/">Logout</a>
      </div>
    </nav>
  </header>
    <!-- Main  -->
    <main class="p-4">
        <div class="mt-10 sm:mt-0">
            <div class="md:grid md:grid-cols-3 md:gap-6">
                <div class="md:col-span-1">
                    <div class="px-4 sm:px-0">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Update Result</h3>
                        <p class="mt-1 text-sm text-gray-600">Enter Correct Details Of Student.</p>
                    </div>
                </div>
                <div class="mt-2 mr-5 md:col-span-2 md:mt-0">
              

                    <form method="POST" class="update" id="update">
                        <div class="overflow-hidden shadow sm:rounded-md">
                            <div class="bg-white px-4 py-5 sm:p-6">
                                <div class="grid grid-cols-6 gap-6">
                                    <div class="col-span-6 sm:col-span-4">
                                        <label for="roll" class="block text-sm font-medium text-gray-700">Roll
                                            No</label>
                                        <input formControlName="roll" type="number" name="roll" id="roll"
                                            autocomplete="given-name"
                                            class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm"
                                            placeholder="Enter Roll no" value=<%=student.roll %> >
                                    </div>
                                    <div class="col-span-6 sm:col-span-4">
                                        <label for="name" class="block text-sm font-medium text-gray-700">Full
                                            Name</label>
                                        <input formControlName="name" type="text" name="name" id="name"
                                            autocomplete="given-name"
                                            class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm"
                                            placeholder="Enter Full Name" value=<%=student.name %>>
                                    </div>

                                    <div class="col-span-6 sm:col-span-4">
                                        <label for="dob" class="block text-sm font-medium text-gray-700">Date Of
                                            Birth</label>
                                        <input formControlName="dob" type="date" name="dob" id="dob"
                                            autocomplete="family-name"
                                            class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm"
                                            value=<%=student.dob %>>
                                    </div>

                                    <div class="col-span-6 sm:col-span-4">
                                        <label for="score" class="block text-sm font-medium text-gray-700">Score</label>
                                        <input formControlName="score" type="text" name="score" id="score"
                                            autocomplete="score"
                                            class=" p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm"
                                            placeholder="Enter Total Score" value=<%=student.score %>>
                                    </div>


                                </div>
                            </div>
                            <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
                                <button type="submit"
                                    class="inline-flex justify-center rounded-md border border-transparent bg-slate-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">Save</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>


    </main>

    <!-- Footer -->
    <%- include("../partials/footer.ejs") %>