<!-- Header -->
<%- include("../partials/header_logout.ejs") %>

    <!-- Main  -->
    <main class="p-4">
        <div class=" px-4  text-right sm:px-6">
            <a href="add" type="button"
                class="inline-flex justify-center rounded-md border border-transparent bg-slate-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">Add
                Record</a>
        </div>

        <div class="md:col-span-1">
            <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Student List</h3>
                <p class="mt-1 text-sm text-gray-600">Details Of All Students. Total </p>
            </div>
         
            <table class="table table-auto table-striped table-bordered border-r-4 text-center mt-3 ">
                <thead>
                    <tr>
                        <th>Roll No</th>
                        <th class=" text-left ">Name</th>
                        <th>Date of Birth</th>
                        <th>Score(%)</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                   <%  students.forEach(element => { %>
                    <tr>
                        <td><%= element.roll %></td>
                        <td><%= element.name %></td>               
                        <td><%= element.dob %></td>
                        <td><%= element.score %></td> 
                        <td>
                            <a href="/update/<%= element._id %>"> <i class="fa fa-edit" style="font-size:20px;color:blue;"></i></a>
                            <span class="mx-2">|</span>
                            <a href="/delete/<%= element._id %> "  style="cursor: pointer; "><i class="fa fa-trash " style="font-size:20px;color:red;"></i></a>
                        </td>
                    </tr>
                    <%}) %>
                </tbody>
            </table>


    </main>

    <!-- Footer -->
    <%- include("../partials/footer.ejs") %>